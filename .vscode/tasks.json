// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm-build",
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "npm-watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "generate-parser",
			"type": "shell",
			"command": "antlr4ts ${workspaceFolder}/src/language/antlr/deal.g4 -o ${workspaceFolder}/src/language",
			"problemMatcher": []
		},
		{
			"label": "generate-visitor",
			"type": "shell",
			"command": "antlr4ts -visitor ${workspaceFolder}/src/language/antlr/deal.g4 -o ${workspaceFolder}/src/language",
			"problemMatcher": []
		},
		{
			"label": "full-build",
			"dependsOn": ["generate-visitor", "npm-watch"]
		}
	]
}
