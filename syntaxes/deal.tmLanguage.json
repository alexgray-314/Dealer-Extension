{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Deal",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#types"
		},
		{
			"include": "#players"
		},
		{
			"include": "#cards"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#properties"
		},
		{
			"include": "#ids"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.deal",
				"match": "\\b(if|cancel|else|on|define|for|in)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.deal",
				"match": "\\b(move|deal)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "storage.type.deal",
				"match": "\\b(int|string|card|area|action)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.deal",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.deal",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "//.*$"
				}
			]
		},
		"players": {
			"patterns": [
				{
					"name": "variable.other.deal",
					"match": "<[^>]*>"
				}
			]
		},
		"cards": {
			"patterns": [
				{
					"name": "constant.language.deal",
					"match": "#[A-Za-z0-9]+"
				}
			]
		},
		"properties": {
			"patterns": [
				{
					"name": "support.property-value",
					"match": "\\.[a-z]+"
				}
			]
		},
		"ids": {
			"patterns": [
				{
					"name": "variable.other.deal",
					"match": "[A-Za-z]+"
				}
			]
		}
	},
	"scopeName": "source.deal"
}