// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm-watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build-parser",
			"type": "shell",
			"command": "antlr4ts ${workspaceFolder}/antlr/deal.g4 -o ${workspaceFolder}/src/parser",
			"problemMatcher": []
		},
		{
			"label": "build-visitor",
			"type": "shell",
			"command": "antlr4ts -visitor ${workspaceFolder}/antlr/deal.g4 -o ${workspaceFolder}/src/parser",
			"problemMatcher": []
		},
	]
}
