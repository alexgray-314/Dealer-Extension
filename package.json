{
  "name": "dealer",
  "displayName": "Dealer",
  "description": "Syntax highlighting for the Deal language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:deal"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dealer.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "deal",
        "aliases": [
          "Deal",
          "deal"
        ],
        "extensions": [
          ".deal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "deal",
        "scopeName": "source.deal",
        "path": "./syntaxes/deal.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4"
  }
}
